generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Convidado {
  id            String     @id
  nome          String
  quant_familia Int
  confirmado    Boolean
  user_id       String?
  telefone      String     
  user          User?      @relation(fields: [user_id], references: [id])
  presentes     Presente[]
}

model Presente {
  id           String     @id
  nome         String
  descricao    String?
  selecionado  Boolean
  convidado_id String?
  user_id      String?
  image        String?
  valor        Float?
  url_produto  String?
  tipo_selecao String?
  mensagem     String?
  convidado    Convidado? @relation(fields: [convidado_id], references: [id])
  user         User?      @relation(fields: [user_id], references: [id])

  updated_at DateTime? @updatedAt
}

model User {
  id                     String      @id
  nome                   String
  email                  String      @unique
  nome_parceiro          String?
  data_casamento         String?
  horario                String?
  lat                    String?
  lon                    String?
  endereco               String?
  endereco_entrega       String?
  chave_pix              String?
  cidade                 String?
  telefone               String?
  password               String
  convite_url            String?
  mensagem_agradecimento String?
  convidados             Convidado[]
  presentes              Presente[]
}
