generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Convidado {
  id            String      @id
  nome          String
  quant_familia Int
  confirmado    Boolean
  user_id       String?
  telefone      String     @unique
  user          User?      @relation(fields: [user_id], references: [id])
  presentes     Presente[]
}

model Presente {
  id           String      @id
  nome         String
  descricao    String?
  selecionado  Boolean
  convidado_id String?
  user_id      String?
  image        String?
  valor        Float?
  user         User?      @relation(fields: [user_id], references: [id])
  convidado   Convidado? @relation(fields: [convidado_id], references: [id])
}

model User {
  id             String       @id
  nome           String
  email          String  @unique
  nome_parceiro  String
  data_casamento String?
  password       String
  convidados     Convidado[]
  presentes      Presente[]
}
